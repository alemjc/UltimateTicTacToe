<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.games.ultimatetictactoe.app" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2m.permission.RECEIVE" />
    <uses-permission android:name="com.games.ultimatetictactoe.app.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_xlauncher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainTicTacToeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>



        <provider
            android:name=".DBManager"
            android:authorities="com.games.ultimatetictactoe.app.DB"
            android:exported="true"
            android:syncable="true">
        </provider>

        <service android:name=".AuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/acountauthenticator" />
        </service>
        <service
            android:name=".SyncAdapterService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"></action>
            </intent-filter>
        </receiver>

        <service
            android:name=".GmcListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
            </intent-filter>

        </service>
        <service
            android:name=".InstanceIDService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name=".RegistrationService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.games.ultimatetictactoe.app.RegistrationService" />
            </intent-filter>
        </service>
        <service
            android:name=".AcceptOrRejectRequestService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.games.ultimatetictactoe.app.action.ACCEPT" />
                <action android:name="com.games.ultimatetictactoe.app.action.DENY"/>
            </intent-filter>
        </service>
        <service
            android:name=".UpdateTableService"
            android:exported="false" >

            <intent-filter>
                <action android:name="com.games.ultimatetictactoe.app.action.UPDATETABLE"/>
                <action android:name="com.games.ultimatetictactoe.app.acton.UPDATEPLAYER"/>
            </intent-filter>
        </service>
    </application>

</manifest>
